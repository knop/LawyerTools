<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="3dp"
        android:background="@color/title_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_financing_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_bai" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/title_bg"
                android:paddingLeft="5dp"
                android:text="@string/basic_info"
                android:textColor="@color/color_bai" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="3dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/source" />

                <TextView
                    android:id="@+id/tv_financing_info_source"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/type" />

                <TextView
                    android:id="@+id/tv_financing_company_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/tv_financing_contact_person"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/phone_number" />

                <TextView
                    android:id="@+id/tv_financing_telephone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/mail" />

                <TextView
                    android:id="@+id/tv_financing_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/title_bg"
                android:paddingLeft="5dp"
                android:text="@string/finance_info"
                android:textColor="@color/color_bai" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="3dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/finance_cost" />

                <TextView
                    android:id="@+id/tv_financing_cost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/rating" />

                <TextView
                    android:id="@+id/tv_financing_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="3dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/finance_industry" />

                <TextView
                    android:id="@+id/tv_financing_industry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="3dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/finance_style" />

                <TextView
                    android:id="@+id/tv_financing_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/finance_quota" />

                <TextView
                    android:id="@+id/tv_financing_quota"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/finance_horizon" />

                <TextView
                    android:id="@+id/tv_financing_horizon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/project_area" />

                <TextView
                    android:id="@+id/tv_financing_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/guarantee_type" />

                <TextView
                    android:id="@+id/tv_financing_guarantee_type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/payment" />

                <TextView
                    android:id="@+id/tv_financing_payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="11.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/title_bg"
                android:paddingLeft="5dp"
                android:text="@string/commission_info"
                android:textColor="@color/color_bai" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingTop="3dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/have_commission" />

                <TextView
                    android:id="@+id/tv_financing_has_commission"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:paddingLeft="5dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.0"
                    android:background="@color/color_zhonghui"
                    android:text="@string/commission_ratio" />

                <TextView
                    android:id="@+id/tv_financing_commission_proportion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/title_bg"
                android:paddingLeft="5dp"
                android:text="@string/comments"
                android:textColor="@color/color_bai" />

            <WebView
                android:id="@+id/wv_financing_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/title_bg"
                android:paddingLeft="5dp"
                android:text="@string/attachments"
                android:textColor="@color/color_bai" />

            <TextView
                android:id="@+id/tv_attachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>