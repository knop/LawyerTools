                android:paddingLeft="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/title_bg"
            android:paddingLeft="5dp"
            android:text="@string/commission_info"
            android:textColor="@color/color_bai" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="3dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:background="@color/color_zhonghui"
                android:text="@string/have_commission" />

            <TextView
                android:id="@+id/tv_investment_has_commission"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:paddingLeft="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.0"
                android:background="@color/color_zhonghui"
                android:text="@string/commission_ratio" />

            <TextView
                android:id="@+id/tv_investment_commission_proportion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.0"
                android:paddingLeft="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/title_bg"
            android:paddingLeft="5dp"
            android:text="@string/comments"
            android:textColor="@color/color_bai" />

        <TextView
            android:id="@+id/tv_investment_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@color/title_bg"
            android:paddingLeft="5dp"
            android:text="@string/attachments"
            android:textColor="@color/color_bai" />

        <TextView
            android:id="@+id/tv_attachments"
            android:layout_width="match_parent"
