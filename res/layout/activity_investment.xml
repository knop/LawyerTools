                android:layout_weight="4.0"
                android:background="@color/color_zhonghui"
                android:text="@string/investment_horizon" />

            <TextView
                android:id="@+id/tv_investment_horizon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="11.0"
                android:paddingLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.0"
                android:background="@color/color_zhonghui"
                android:text="@string/prior_cost" />

            <TextView
                android:id="@+id/tv_investment_prior_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="11.0"
                android:paddingLeft="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.0"
                android:background="@color/color_zhonghui"
                android:text="@string/guarantee_type" />

            <TextView
                android:id="@+id/tv_investment_guarantee_type"
                android:layout_width="0dp"
